---
import MainLayout from "@/layouts/MainLayout.astro"
import { Image } from "astro:assets";
import { getEntry } from 'astro:content';
const entry_content = await getEntry('contenidos', 'canales');
const entry_canales = await getEntry('canales', 'redes');
if (!entry_canales) {
    throw new Error('No se encontró la entrada de contenido para canales/redes');
}
if (!entry_content) {
    throw new Error('No se encontró la entrada de contenido para contenidos/canales');
}
const canales = entry_canales.data;
const { Content } = await entry_content.render();
---

<MainLayout title="Contacto - Lyoss">
    <div class="hero min-h-screen bg-base-100 max-lg:pt-16">
        <div class="hero-content max-w-6xl mx-auto px-6">
            <div class="grid lg:grid-cols-2 gap-12 items-center w-full">
                <!-- Left Side - Text -->
                <div class="text-left">
                    <Content />
                </div>

                <!-- Right Side - Links -->
                <div class="space-y-4">
                    {canales.map((canal) => (
                        <a
                            href={canal.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-4 p-6 bg-base-200 hover:bg-base-300 rounded-2xl border border-base-300 hover:border-primary/30 hover:scale-105 transition-all duration-300 shadow-sm hover:shadow-lg group"
                        >
                            <div class="p-3 bg-base-100 rounded-xl group-hover:bg-primary/10 transition-colors duration-300 shadow-sm">
                                {canal.logoDark ? (
                                    <div class="w-8 h-8 relative">
                                        <Image
                                            src={canal.logo}
                                            alt={canal.nombre}
                                            width={64}
                                            height={64}
                                            class="w-8 h-8 object-contain hidden dark:block"
                                        />
                                        <Image
                                            src={canal.logoDark}
                                            alt={canal.nombre}
                                            width={64}
                                            height={64}
                                            class="w-8 h-8 object-contain dark:hidden"
                                        />
                                    </div>
                                ) : (
                                    <Image
                                        src={canal.logo}
                                        alt={canal.nombre}
                                        width={64}
                                        height={64}
                                        class="w-8 h-8 object-contain"
                                    />
                                )}
                            </div>
                            <div class="flex-1">
                                <div class="font-bold text-lg text-base-content">{canal.nombre}</div>
                                <div class="text-base-content/70 text-sm max-sm:hidden">{canal.descripcion}</div>
                            </div>
                            <div class="p-2 bg-base-300 rounded-full group-hover:translate-x-1 group-hover:bg-primary/20 transition-all duration-300">
                                <svg class="w-5 h-5 text-base-content/70 group-hover:text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </div>
</MainLayout>
