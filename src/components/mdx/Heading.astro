---
interface Props {
    class: string;
    variant?: 'sm' | 'md' | 'lg';
}
const { class: className, variant } = Astro.props;
---

{
    variant === 'lg' ? (
        <h1 class={`text-4xl lg:text-8xl font-bold font-heading text-base-content ${className}`}>
            <slot />
        </h1>
    ) : variant === 'sm' ? (
        <h1 class={`text-2xl md:text-4xl font-bold text-base-content font-heading ${className}`}>
            <slot />
        </h1>
    ) :
    (
        <h1 class={`text-4xl md:text-6xl font-bold text-base-content font-heading ${className}`}>
            <slot />
        </h1>
    )
}
